<p id="notice"><%= notice %></p>

<h1>Health Checks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Height</th>
      <th>Height in</th>
      <th>Weight</th>
      <th>Weight in</th>
      <th>Daily activity level</th>
      <th>Calculated bmr</th>
      <th>Estimated Calories per day:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @health_checks.each do |health_check| %>
      <tr>
        <td><%= health_check.name %></td>
        <td><%= health_check.age %></td>
        <td><%= health_check.gender %></td>
        <td><%= health_check.height %></td>
        <td><%= health_check.height_in %></td>
        <td><%= health_check.weight %></td>
        <td><%= health_check.weight_in %></td>
        <td><%= health_check.daily_activity_level %></td>
        <td><%= health_check.calculated_BMR %></td>
        <th><%= health_check.estimated_cal_per_day %></th>
        <td><%= link_to 'Show', health_check %></td>
        <td><%= link_to 'Edit', edit_health_check_path(health_check) %></td>
        <td><%= link_to 'Destroy', health_check, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

